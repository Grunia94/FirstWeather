<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.firstweather.app.weatherapp.fragments.WeatherConditionFragment">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="ObsoleteLayoutParam,UselessParent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25">

                <TableRow>

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="dzieÅ„"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/background_light"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/weatherIconImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        tools:ignore="ContentDescription" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25">

                <TableRow
                    android:layout_width="130dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/forecastTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="prognoza"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/background_light"
                        tools:ignore="HardcodedText" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/temp_max"
                        android:gravity="center"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/highTemperatureTextView"
                        android:layout_width="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="tempMax"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@android:color/background_light"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/temp_min"
                        android:gravity="center"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/lowTemperatureTextView"
                        android:layout_width="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="tempMin"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/background_light"
                        android:visibility="visible"
                        tools:ignore="HardcodedText" />

                </TableRow>

            </TableLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>
